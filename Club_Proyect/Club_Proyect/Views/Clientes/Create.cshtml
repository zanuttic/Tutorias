@model Club_Proyect.Entity.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    @if (Model!=null && Model.error)
    {
        <label asp-for="mensaje" class="text-danger">@Model.mensaje</label>
        //<input asp-for="mensaje" class="form-control" disabled="disabled" />
    }
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Num_Cliente" class="control-label"></label>
                <input asp-for="Num_Cliente" class="form-control" />
                <span asp-validation-for="Num_Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Saldo" class="control-label"></label>
                <input asp-for="Saldo" class="form-control" />
                <span asp-validation-for="Saldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="persona.DNI" class="control-label"></label>
                <input asp-for="persona.DNI" class="form-control" />
                <span asp-validation-for="persona.DNI" class="text-danger"></span>
            </div>
            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activo_oNo" /> @Html.DisplayNameFor(model => model.Activo_oNo)
                </label>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
